  $(function() {
    var chart = new Highcharts.Chart({
      chart: {
        renderTo: "view_billing_chart", 
        plotBackgroundColor: null,
        plotBorderWidth: null,
        plotShadow: false
      }, 
      title: { 
        text: ""
      }, 
      
     plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    color: '#000000',
                    connectorColor: '#000000',
                    format: '<b>{point.name}</b>: {point.percentage:.1f} %'
                }
            }
        },
      series: [{
            type: 'pie',
            name: 'Distrubtion',
            data: [
                ['Firefox',   45.0],
                ['IE',       26.8],
                {
                    name: 'Chrome',
                    y: 12.8,
                    sliced: true,
                    selected: true
                },
                ['Safari',    8.5],
                ['Opera',     6.2],
                ['Others',   0.7]
            ]
            //#{@pie_chart.to_json}
        }]
    });
  });

