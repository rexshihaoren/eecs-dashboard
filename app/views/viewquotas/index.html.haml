%div{:id => "view_quota_chart",  :style => "width:95%; height:50%;"}
 	
%table#viewquota_table
  %head
    %tr{:id => "viewquota_table_header"}
      %td Project Name 
      %td Percent of Quota Used
      %td Change Quota
  %tbody
    - @storage_data.values.each do |storage|
      - storage.each do |proj, percent|
        - if proj == @current_directory
          %tr{:class => 'hilite'}
            %td= link_to "View #{proj} Quota", viewquotas_path(:current_directory => proj, :dependant => @dependant)
            %td= percent
            %td= button_to "Change #{proj} Quota", :action => :change_quota, :modifying_directory => proj, :user => @user_name, :dependant => @dependant
          %br/ 
        - else 
          %tr
            %td= link_to "View #{proj} Quota", viewquotas_path(:current_directory => proj, :dependant => @dependant)
            %td= percent
            %td= button_to "Change #{proj} Quota", :action => :change_quota, :modifying_directory => proj, :user => @user_name, :dependant => @dependant
            %br/
          


